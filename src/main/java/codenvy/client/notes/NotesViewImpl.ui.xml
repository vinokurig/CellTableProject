<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='resources' type='codenvy.client.Resources'/>
    <ui:with field='messages' type='codenvy.client.MessageConstants'/>

    <g:DockLayoutPanel unit='PX' width="250px" height="115px">

        <g:center>
            <g:FlowPanel>

                <g:TextArea styleName="{resources.styles.notesTextAreaStyle}" ui:field="notesTextArea"/>

            </g:FlowPanel>
        </g:center>

        <g:south size="25">
            <g:FlowPanel>

                <g:Button styleName="{resources.styles.notesButtonStyle}" ui:field="saveButton"
                          text="{messages.notesBtnSave}"/>

            </g:FlowPanel>
        </g:south>

    </g:DockLayoutPanel>

</ui:UiBinder>