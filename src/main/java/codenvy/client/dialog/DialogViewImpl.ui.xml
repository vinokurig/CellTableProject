<ui:UiBinder
        xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:d="urn:import:com.google.gwt.user.datepicker.client"

        ui:generateFormat="com.google.gwt.i18n.rebind.format.PropertiesFormat"
        ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
        ui:generateLocales="default">

    <ui:with field='resources' type='codenvy.client.Resources'/>
    <ui:with field='messages' type='codenvy.client.MessageConstants'/>

    <g:DockLayoutPanel unit='PX' width="250px" height="115px">

        <g:center>
            <g:FlowPanel>

                <g:Label styleName="{resources.Styles.labelStyle}" text="{messages.dialogNameLabel}"/>
                <g:TextBox styleName="{resources.Styles.textBoxStyle}" ui:field="name"/>

                <g:Label styleName="{resources.Styles.labelStyle}" text="{messages.dialogAddressLabel}"/>
                <g:TextBox styleName="{resources.Styles.textBoxStyle}" ui:field="address"/>

                <g:Label styleName="{resources.Styles.labelStyle}" text="{messages.dialogBirthdayLabel}"/>
                <d:DateBox styleName="{resources.Styles.textBoxStyle}" ui:field="birthday"/>

            </g:FlowPanel>
        </g:center>

        <g:south size="25">
            <g:FlowPanel>

                <g:Button styleName="{resources.Styles.buttonStyle}" ui:field="closeButton"
                          text="{messages.dialogBtnClose}"/>
                <g:Button styleName="{resources.Styles.buttonStyle}" ui:field="saveButton"
                          text="{messages.dialogBtnSave}"/>

            </g:FlowPanel>
        </g:south>

    </g:DockLayoutPanel>

</ui:UiBinder>