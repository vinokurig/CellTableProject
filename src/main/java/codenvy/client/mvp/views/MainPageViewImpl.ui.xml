<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
     xmlns:g='urn:import:com.google.gwt.user.client.ui'
     xmlns:ct='urn:import:com.google.gwt.user.cellview.client'>

    <ui:with field='resources' type='codenvy.client.Resources'/>

    <ui:style>
        .buttonStyle {
            margin: 6px;
        }
        .textStyle {
            margin: 6px;
            padding: 3px;
        }
        .imageStyle {
            margin: 6px;
            width: 150px;
            height: 150px;
        }
    </ui:style>

    <g:DockLayoutPanel unit='PX' width="100%" height="100%">

        <g:center>
            <g:ScrollPanel>
                <ct:CellTable ui:field="usersTable"/>
            </g:ScrollPanel>
        </g:center>

        <g:east size='170'>
            <g:FlowPanel>
                <g:Button addStyleNames="{style.buttonStyle}" ui:field="add" text="Add" width="150px"/>
                <g:Button addStyleNames="{style.buttonStyle}" ui:field="edit" text="Edit" width="150px"/>
                <g:Button addStyleNames="{style.buttonStyle}" ui:field="delete" text="Delete" width="150px"/>

                <g:Label addStyleNames="{style.textStyle}" text="{resources.text.getText}"/>

                <g:Image addStyleNames="{style.imageStyle}" resource='{resources.userImage}'/>
            </g:FlowPanel>
        </g:east>

    </g:DockLayoutPanel>

</ui:UiBinder>