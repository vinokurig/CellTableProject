<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
     xmlns:g='urn:import:com.google.gwt.user.client.ui'
     xmlns:ct='urn:import:com.google.gwt.user.cellview.client'>

    <ui:with field='res' type='codenvy.client.Resources'/>

    <g:DockLayoutPanel unit='PX' width="100%" height="100%">

        <g:center>
            <g:ScrollPanel>
                <ct:CellTable ui:field="usersTable"/>
            </g:ScrollPanel>
        </g:center>

        <g:east size='170'>
            <g:FlowPanel>
                <g:Button addStyleNames="{res.Styles.mainPageButtonStyle}" ui:field="add" text="Add" width="150px"/>
                <g:Button addStyleNames="{res.Styles.mainPageButtonStyle}" ui:field="edit" text="Edit" width="150px"/>
                <g:Button addStyleNames="{res.Styles.mainPageButtonStyle}" ui:field="delete" text="Delete" width="150px"/>
            </g:FlowPanel>
        </g:east>

    </g:DockLayoutPanel>

</ui:UiBinder>