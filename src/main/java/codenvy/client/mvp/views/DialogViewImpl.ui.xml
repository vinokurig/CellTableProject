<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

    <ui:with field='resources' type='codenvy.client.Resources'/>

    <g:DockLayoutPanel unit='PX' width="250px" height="115px">

        <g:center>
            <g:FlowPanel>

                <g:Label styleName="{resources.Styles.labelStyle}" text="Name:"/>
                <g:TextBox styleName="{resources.Styles.textBoxStyle}" ui:field="name"/>

                <g:Label styleName="{resources.Styles.labelStyle}" text="Address:"/>
                <g:TextBox styleName="{resources.Styles.textBoxStyle}" ui:field="address"/>

                <g:Label styleName="{resources.Styles.labelStyle}" text="Birthday:"/>
                <d:DateBox styleName="{resources.Styles.textBoxStyle}" ui:field="birthday"/>

            </g:FlowPanel>
        </g:center>

        <g:south size="25">
            <g:FlowPanel>

                <g:Button styleName="{resources.Styles.buttonStyle}" ui:field="closeButton" text="Close"/>
                <g:Button styleName="{resources.Styles.buttonStyle}" ui:field="saveButton" text="Save"/>

            </g:FlowPanel>
        </g:south>

    </g:DockLayoutPanel>

</ui:UiBinder>