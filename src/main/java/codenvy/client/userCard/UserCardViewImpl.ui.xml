<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

    <ui:with field='resources' type='codenvy.client.Resources'/>
    <ui:with field='messages' type='codenvy.client.MessageConstants'/>

    <g:DockLayoutPanel unit='PX' width="250px" height="170px">

        <g:center>
            <g:FlowPanel>

                <g:Label styleName="{resources.styles.labelStyle}" text="{messages.userCardNameLabel}"/>
                <g:TextBox styleName="{resources.styles.textBoxStyle}" ui:field="name"/>

                <g:Label styleName="{resources.styles.labelStyle}" text="{messages.userCardAddressLabel}"/>
                <g:TextBox styleName="{resources.styles.textBoxStyle}" ui:field="address"/>

                <g:Label styleName="{resources.styles.labelStyle}" text="{messages.userCardBirthdayLabel}"/>
                <d:DateBox styleName="{resources.styles.textBoxStyle}" ui:field="birthday"/>

                <g:Label styleName="{resources.styles.labelStyle}" text="{messages.userCardNotesLabel}"/>
                <g:TextArea styleName="{resources.styles.userCardTexAreaStyle}" ui:field="notes"/>

            </g:FlowPanel>
        </g:center>

        <g:south size="25">
            <g:FlowPanel>

                <g:Button styleName="{resources.styles.buttonStyle}" ui:field="closeButton"
                          text="{messages.userCardBtnClose}"/>

                <g:Button styleName="{resources.styles.buttonStyle}" ui:field="saveButton"
                          text="{messages.userCardBtnSave}"/>

            </g:FlowPanel>
        </g:south>

    </g:DockLayoutPanel>

</ui:UiBinder>